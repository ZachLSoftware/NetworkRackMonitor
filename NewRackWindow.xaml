<Window x:Class="RackMonitor.NewRackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RackMonitor"
        mc:Ignorable="d"
        Title="Welcome to Rack Monitor" Height="Auto" Width="380"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#FF1a1a1a"
        Foreground="#FFf0f0f0">
    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF448aff"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFf0f0f0"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FF999999"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Margin="10">
        <StackPanel Margin="20">
            <TextBlock Text="Welcome!" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
            <TextBlock Text="No racks were found. Please create your first rack to get started."
                       Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap" Margin="0,0,0,15"/>

            <Label Content="Rack Name:" Foreground="{StaticResource TextSecondaryBrush}"/>
            <TextBox x:Name="RackNameTextBox" Text="Default Rack"
                     Background="#333" Foreground="White" BorderBrush="#555" CaretBrush="White"
                     Padding="5" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" MinWidth="80" Margin="0,0,10,0" IsCancel="True" Click="CancelButton_Click"
                        Background="#333" Foreground="White" BorderBrush="#555"/>
                <Button Content="Create Rack" MinWidth="100" IsDefault="True" Click="CreateButton_Click"
                        Background="{StaticResource AccentBrush}" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
