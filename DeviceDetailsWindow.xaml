<Window x:Class="RackMonitor.DeviceDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RackMonitor"
        xmlns:ipControl="clr-namespace:RackMonitor.UserControls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Device Details" Height="Auto" Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Window.Resources>
        <sys:Boolean x:Key="TrueValue">True</sys:Boolean>

        <local:BoolToVisibilityConverter x:Key="BoolToVisibleConverter"/>


        <!-- Template specifically for the IP Address property -->
        <!-- Template for standard properties (like Name, SubnetMask, etc.) -->
        <DataTemplate x:Key="NormalPropertyTemplate">
            <Grid>
                <TextBox Text="{Binding PropertyValue, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5"/>
            </Grid>
        </DataTemplate>

        <!-- Template specifically for the IP Address property -->
        <DataTemplate x:Key="IpAddressPropertyTemplate">
            <Grid>
                <Border Grid.Column="1" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    Margin="5"
                    VerticalAlignment="Center">
                    <ipControl:IPControl Text="{Binding PropertyValue, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                </Border>
            </Grid>
        </DataTemplate>

        <!-- NEW: Template for boolean properties -->
        <DataTemplate x:Key="BooleanPropertyTemplate">
            <Grid>
                <!-- Corrected binding to PropertyValue -->
                <CheckBox IsChecked="{Binding PropertyValue, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5" Checked="OnBoolPropertyChanged" Unchecked="OnBoolPropertyChanged" />
            </Grid>
        </DataTemplate>


        <!-- The Template Selector instance -->
        <local:PropertyTemplateSelector x:Key="PropertySelector"
                                          NormalTemplate="{StaticResource NormalPropertyTemplate}"
                                          IpAddressTemplate="{StaticResource IpAddressPropertyTemplate}"
                                          BooleanTemplate ="{StaticResource BooleanPropertyTemplate}" />
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Static Header Section -->
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Device Type:" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Text="{Binding CurrentDevice.DeviceType}" VerticalAlignment="Center" Margin="5"/>
            </Grid>
        </Border>

        <!-- Dynamic Properties Section now uses the ItemTemplateSelector -->
        
        <ItemsControl ItemsSource="{Binding DeviceProperties}" Margin="0,10,0,0">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,3" Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibleConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="{Binding DisplayName, StringFormat={}{0}:}" VerticalAlignment="Center" FontWeight="Bold"/>

                        <ContentPresenter Grid.Column="1" 
                                          Content="{Binding}" 
                                          ContentTemplateSelector="{StaticResource PropertySelector}"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Save and Close Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True" MinWidth="80" Margin="0,0,10,0">
                <Button.CommandParameter>
                    <MultiBinding Converter="{x:Static local:WindowCloseConverter.Instance}">
                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                        <Binding Source="{StaticResource TrueValue}"/>
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>
            <Button Content="Close" IsCancel="True" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>


