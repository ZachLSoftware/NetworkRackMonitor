<UserControl x:Class="RackMonitor.UserControls.IPControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RackMonitor.UserControls"
             mc:Ignorable="d" Height="30" Width="150">
    <Viewbox Margin="0">
        <Grid Margin="0,0,0,0" Background="White">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="6"/>

				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="6"/>

				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="6"/>

				<ColumnDefinition Width="20"/>
			</Grid.ColumnDefinitions>

			<Label Grid.Row="0" Grid.Column="1" Content ="." Margin="2,1,0,0" BorderThickness="0" Padding="0" />
			<TextBox Grid.Row="0" Grid.Column="0" TextWrapping="NoWrap" HorizontalAlignment="Center" BorderThickness="0" Text="255" TextAlignment="Center" MaxLength="3" Width="30" VerticalAlignment="Center" Background="{x:Null}" Name="Octet1"/>

			<Label Grid.Row="0" Grid.Column="3" Content ="." Margin="2,1,0,0" BorderThickness="0" Padding="0"/>
			<TextBox Grid.Row="0" Grid.Column="2" TextWrapping="NoWrap" HorizontalAlignment="Center" BorderThickness="0" Text="255" TextAlignment="Center" MaxLength="3" Width="30" VerticalAlignment="Center" Background="{x:Null}" Name="Octet2"/>

			<Label Grid.Row="0" Grid.Column="5" Content ="." Margin="2,1,0,0" BorderThickness="0" Padding="0"/>
			<TextBox Grid.Row="0" Grid.Column="4" TextWrapping="NoWrap" HorizontalAlignment="Center" BorderThickness="0" Text="255" TextAlignment="Center" MaxLength="3" Width="30" VerticalAlignment="Center" Background="{x:Null}" Name="Octet3"/>
			<TextBox Grid.Row="0" Grid.Column="6" TextWrapping="NoWrap" HorizontalAlignment="Center" BorderThickness="0" Text="255" TextAlignment="Center" MaxLength="3" Width="30" VerticalAlignment="Center" Background="{x:Null}" Name="Octet4"/>

		</Grid>
	</Viewbox>
</UserControl>
