<UserControl x:Class="RackMonitor.UserControls.CredentialsInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RackMonitor.UserControls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:b="clr-namespace:RackMonitor.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid>
        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="15" Background="{StaticResource SlotBackgroundBrush}">
            <StackPanel>
                <TextBlock Text="Enter Credentials" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{StaticResource TextPrimaryBrush}"/>
                <Label Target="{Binding ElementName=UsernameTextBox}" Foreground="{StaticResource TextSecondaryBrush}">Username:</Label>
                <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" Text="{Binding PopupUsername, UpdateSourceTrigger=PropertyChanged}" Background="{StaticResource SlotBackgroundBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="{StaticResource SlotBorderBrush}"/>

                <Label Target="{Binding ElementName=PasswordInputBox}" Foreground="{StaticResource TextSecondaryBrush}">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="Content" Value="Password: [Unset]"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasEncryptedPassword}" Value="True">
                                    <Setter Property="Content" Value="Password: [Set]"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
                <!-- PasswordBox needs special handling for MVVM binding (often via Behavior/Helper) -->
                <PasswordBox x:Name="PasswordInputBox" Margin="0,0,0,15" Background="{StaticResource SlotBackgroundBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="{StaticResource SlotBorderBrush}">
                    <i:Interaction.Behaviors>
                        <b:PasswordBoxAssistant BoundPassword="{Binding PopupPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </i:Interaction.Behaviors>
                </PasswordBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="OK" MinWidth="70" Margin="0,0,10,0" Command="{Binding SaveCredentialsCommand}" CommandParameter="{Binding ElementName=PasswordInputBox}" Background="{StaticResource AccentBrush}" Foreground="White" BorderThickness="0"/>
                    <Button Content="Cancel" MinWidth="70" IsCancel="True" Command="{Binding CancelCredentialsCommand}" Background="{StaticResource SlotBackgroundBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="{StaticResource SlotBorderBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
