<UserControl x:Class="RackMonitor.UserControls.StatusMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RackMonitor.UserControls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding CurrentDevice.StatusMessage}">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentDevice.HasStatus}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>

        </TextBlock>

        <iconPacks:PackIconFontAwesome6 Height="20" Width="20"
                                Foreground="{StaticResource TextPrimaryBrush}">
            <iconPacks:PackIconFontAwesome6.Style>
                <Style TargetType="iconPacks:PackIconFontAwesome6">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Setter Property="Spin" Value="False"/>
                    <Setter Property="Kind" Value="FaceAngryRegular"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsComputerShuttingDown}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Kind" Value="CircleNotchSolid"/>
                            <Setter Property="Spin" Value="True"/>
                        </DataTrigger>

                        <!-- Trigger 2: Hide when HasStatus is FALSE -->
                        <!-- This will override Trigger 1 if HasStatus becomes False even during shutdown -->
                        <DataTrigger Binding="{Binding CurrentDevice.HasStatus}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <!-- No need to set Spin=False here, default already covers it -->
                        </DataTrigger>

                        <!-- Optional Trigger 3: Show Default Icon when NOT shutting down AND HasStatus is TRUE -->
                        <!-- This is needed if you want to show the FolderRegular icon sometimes -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsComputerShuttingDown}" Value="False"/>
                                <Condition Binding="{Binding CurrentDevice.HasStatus}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Kind" Value="CheckSolid"/>
                            <Setter Property="Spin" Value="False"/>
                        </MultiDataTrigger>


                    </Style.Triggers>
                </Style>
            </iconPacks:PackIconFontAwesome6.Style>
        </iconPacks:PackIconFontAwesome6>
    </StackPanel>
</UserControl>
